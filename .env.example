APP_NAME="Rented Backend API"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

BCRYPT_ROUNDS=12

LOG_CHANNEL=stderr
LOG_LEVEL=info

# Database Configuration (Railway PostgreSQL)
DB_CONNECTION=pgsql
DB_HOST=
DB_PORT=5432
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=

# Session & Cache (using database for stateless API)
SESSION_DRIVER=database
SESSION_LIFETIME=120
CACHE_STORE=database
QUEUE_CONNECTION=database

# File Storage (use 'public' for Railway)
FILESYSTEM_DISK=public

# Mail Configuration
MAIL_MAILER=log
MAIL_FROM_ADDRESS="noreply@rentedapp.com"
MAIL_FROM_NAME="${APP_NAME}"

# API Configuration
SANCTUM_STATEFUL_DOMAINS=
SANCTUM_TOKEN_EXPIRATION=null
